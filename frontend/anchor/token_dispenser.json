                "type": "publicKey"
              },
              {
                "name": "verification_instruction_index",
                "type": "u8"
              }
            ]
          },
          {
            "name": "Sui"
          },
          {
            "name": "Aptos"
          },
          {
            "name": "Cosmwasm",
            "fields": [
              {
                "name": "chain_id",
                "type": "string"
              },
              {
                "name": "signature",
                "type": {
                  "defined": "Secp256k1Signature"
                }
              },
              {
                "name": "recovery_id",
                "type": "u8"
              },
              {
                "name": "pubkey",
                "type": {
                  "defined": "CosmosPubkey"
                }
              },
              {
                "name": "message",
                "type": "bytes"
              }
            ]
          }
        ]
      }
    }
