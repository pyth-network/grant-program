          {
            "name": "signatureOffset",
            "type": "u16"
          },
          {
            "name": "signatureInstructionIndex",
            "type": "u8"
          },
          {
            "name": "ethAddressOffset",
            "type": "u16"
          },
          {
            "name": "ethAddressInstructionIndex",
            "type": "u8"
          },
          {
            "name": "messageDataOffset",
            "type": "u16"
          },
          {
            "name": "messageDataSize",
            "type": "u16"
